@{
    ViewData["Title"] = "Sales Records";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="SimpleSearch">
            <fieldset>
                <legend>Simple Search</legend>
                <div class="mb-3">
                    <label for="minDateSimple" class="form-label">Min Date</label>
                    <input type="date" id="minDateSimple" name="minDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="maxDateSimple" class="form-label">Max Date</label>
                    <input type="date" id="maxDateSimple" name="maxDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>

    <div class="col-md-6">
        <form class="form-horizontal" asp-action="GroupingSearch">
            <fieldset>
                <legend>Grouping Search</legend>
                <div class="mb-3">
                    <label for="minDateGroup" class="form-label">Min Date</label>
                    <input type="date" id="minDateGroup" name="minDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <label for="maxDateGroup" class="form-label">Max Date</label>
                    <input type="date" id="maxDateGroup" name="maxDate" class="form-control" />
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </fieldset>
        </form>
    </div>
</div>
