@model SalesWebMvc.Models.ViewModels.SellerFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>

<h4>Edit Seller</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Seller.Id" />

            <div class="mb-3">
                <label asp-for="Seller.Name" class="form-label">Name</label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Seller.Email" class="form-label">Email</label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Seller.BirthDate" class="form-label">Birth Date</label>
                <input asp-for="Seller.BirthDate" class="form-control" type="date" />
                <span asp-validation-for="Seller.BirthDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Seller.BaseSalary" class="form-label">Base Salary</label>
                <input asp-for="Seller.BaseSalary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Seller.DepartmentId" class="form-label">Department</label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))" class="form-select">
                </select>
                <span asp-validation-for="Seller.DepartmentId" class="text-danger"></span>
            </div>

            <div class="mt-4">
                <input type="submit" value="Save" class="btn btn-primary me-2" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
